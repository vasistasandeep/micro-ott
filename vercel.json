{
  "version": 2,
  "name": "ott-platform",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/catalog/content",
      "dest": "/api/catalog/content.js"
    },
    {
      "src": "/api/catalog/trending",
      "dest": "/api/catalog/trending.js"
    },
    {
      "src": "/api/catalog/genres",
      "dest": "/api/catalog/genres.js"
    },
    {
      "src": "/api/catalog/content/([^/]+)",
      "dest": "/api/catalog/$1.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["bom1"],
  "public": true
}
