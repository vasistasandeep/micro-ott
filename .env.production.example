# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual credentials
# NEVER commit .env.production to git!

# Neon PostgreSQL Database
POSTGRES_HOST=your-neon-host.neon.tech
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_SSL=true

# Full PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Upstash Redis
REDIS_URL=redis://default:password@your-redis.upstash.io:6379
REDIS_TLS=true

# Service URLs (Update after Railway deployment)
AUTH_SERVICE_URL=http://localhost:3001
CATALOG_SERVICE_URL=http://localhost:3002
STREAMING_SERVICE_URL=http://localhost:3003
USER_ACTIVITY_SERVICE_URL=http://localhost:3004
RECOMMENDATION_SERVICE_URL=http://localhost:3005

# API Gateway
API_GATEWAY_PORT=3000
NODE_ENV=production

# JWT Configuration (Generate a secure random key!)
JWT_SECRET=generate-a-secure-random-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
